<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apress.gerber.diary_proj.MainActivity">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:text="종료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달력"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pictureDiaryButton"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/pictureDiaryButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pictureDiaryButton" />

    <Button
        android:id="@+id/pictureDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진일기"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="97dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="78dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="97dp" />

    <Button
        android:id="@+id/normalDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="일기"
        app:layout_constraintRight_toLeftOf="@+id/pictureDiaryButton"
        app:layout_constraintTop_toTopOf="@+id/pictureDiaryButton"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/shareDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교환일기"
        app:layout_constraintLeft_toLeftOf="@+id/normalDiaryButton"
        app:layout_constraintTop_toBottomOf="@+id/normalDiaryButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/diaryListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일기 목록"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
